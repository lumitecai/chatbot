# Production Environment Variables for Coolify Deployment
# Copy this file to .env.production and fill in your values

# Domain configuration
DOMAIN=chatbot.lumitec.ai

# N8N Webhook Configuration
REACT_APP_N8N_WEBHOOK_URL=https://lumitecai-u40468.vm.elestio.app/webhook/chat-webhook
REACT_APP_API_BASE_URL=https://lumitecai-u40468.vm.elestio.app/webhook/chat-webhook

# WebSocket URL - Automatically configured based on domain
REACT_APP_WEBSOCKET_URL=wss://chatbot.lumitec.ai/ws

# CORS configuration for WebSocket server
ALLOWED_ORIGINS=https://chatbot.lumitec.ai

# Docker Settings
NODE_ENV=production

# Optional: Analytics (if using)
# REACT_APP_GA_TRACKING_ID=UA-XXXXXXXXX-X

# Optional: Sentry Error Tracking
# REACT_APP_SENTRY_DSN=https://your-sentry-dsn

# Optional: Additional security headers
# SECURITY_HEADERS_ENABLED=true
# HSTS_MAX_AGE=31536000

# Optional: Rate limiting
# RATE_LIMIT_WINDOW_MS=60000
# RATE_LIMIT_MAX_REQUESTS=100

# Optional: Logging level
# LOG_LEVEL=info